<div class="dashboard-banner">
  <div class ="dashboard-headings">
    <h1 class ="crazshadow">Your Jungle</h1>
    <br>
  </div>
</div>


<div class ="dashboard-bookings">
  <h2>Upcoming Plantscapes</h2>
  <div class="dashboard-calender">
   <div class="row d-flex justify-content-around mt-5">
    <div style="width: 900px" class="d-flex flex-column justify-content-center">
      <% if @bookings.blank? %>
        <p>Oh your plants haven't planned any vacations!</p>
      <%else %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Booking#</th>
              <th scope="col">Wateringdate(s)</th>
              <th scope="col">Number of Plants</th>
              <th scope="col">Dusting Service</th>
              <th scope="col">Cutting Service</th>
              <th scope="col">Repotting</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booki| %>
              <tr>
                <th scope="row"> <%= booki.id %> </th>
                <td>
                  <%booki.waterings.each do |water| %>
                    <span>
                      <%= water.date %>
                      <br>
                    </span>
                  <% end %>
                  </td>
                <td><%= booki.number_of_plants %></td>
                    <% if booki.dusting_service %>
                      <td ><i class="far fa-gem"></i></td>
                    <% else %>
                      <td>x</td>
                    <% end %>
                    <% if booki.cutting_service %>
                      <td><i class="far fa-hand-scissors"></i></td>
                    <% else %>
                      <td>x</td>
                    <% end %>
                    <% if booki.repotting_service %>
                      <td><i class="fas fa-exchange-alt"></i></td>
                    <% else %>
                      <td>x</td>
                    <% end %>
                <td><%= booki.price %>â‚¬</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
    <div ><%= link_to " New booking", new_booking_path, class: "btn btn-lg yellow-button shadow px-5 py-3 mb-5" %></div>
    </div>
  </div>
</div>


<div class="dashboard-plantcollection">
  <h2>Your Jungles</h2>
  <div class ="dashboard-jungles">
    <div class="row d-flex justify-content-around mt-5">

         <% if  @jungles.count == 0%>
           <div style="width: 900px" class="d-flex flex-column justify-content-center">
             <p>You do not have a jungle yet! If you create a Jungle and add your plants, you can upload pictures and a status to your plants! </p>
           </div>
           <div style="width: 200px"><%= link_to " Create a new Jungle", new_jungle_path, class: "btn btn-lg yellow-button shadow px-5 py-3 mb-5" %></div>
         <% elsif  @jungles.count == 1 %>
           <div style="width: 900px" class="d-flex flex-column justify-content-center">
            <%= render "shared/card-jungles" %>
            </div>
            <div style="width: 200px">
              <%= link_to " Create a new Jungle",new_jungle_path, class: "btn btn-lg yellow-button shadow px-5 py-3 mb-2" %>
            </div>
        <%else %>
          <div style="width: 900px" class="d-flex flex-column justify-content-center">
              <%= render "shared/card-jungles" %>
          </div>
          <div style="width: 900px"><%= link_to " Create a new Jungle",new_jungle_path, class: "btn btn-lg yellow-button shadow px-5 py-3 mb-5" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
