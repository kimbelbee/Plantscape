      <!-- div for the jungle plants listing (Cards) as iteration for the plants associated with the specific jungle of the user -->

      <div class="text-center mt-5">
        <h2>The plants in your jungle</h2>
      </div>

      <div class="row mt-4">
        <% @jungle.jungleplants.each do |jp| %>
          <div class="col-sm-6 col-md-6 col-lg-4 mb-4 link-style">
          <%#= link_to plant_path(jp) do%>
            <!-- CREATING THE CARD CONTAINER -->
            <div class="card card-plant-style card-dynamic pos-relative card-plant-style-hover">
              <!-- TOP IMAGE part of CARD PLANT -->
              <div class="jp-overlay d-flex justify-content-between w-100">
                <div class="icon-status mt-2 ml-2"><strong><%= jp.status %></strong></div>
                <p class="mt-2 mr-2"><%= link_to "ðŸ—‘", plant_path(jp) , method: :delete %></p>
              </div>
              <div class="card-plant-img">
              <%= link_to plant_path(jp) do%>
              <%= cl_image_tag jp.plant.photo.key, class: "card-img-top rounded"%>
