                <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
                <%#= link_to "Go to plant", plant_path(plant), class:"btn yellow-button" %>
                <!-- <h5 class="card-title text-center link-style"><%#= link_to plant.name, plant_path(plant)%></h5> -->
                <h5 class="card-title text-center link-style"><%= jp.plant.name %></h5>
              </div>
            </div>
          <% end %>
          </div>
        <% end %>
      </div>

      <div class="row mt-4 d-flex justify-content-around">
        <%= link_to " + Add a plant ", new_jungle_jungleplant_path(@jungle), class: "btn btn-sm yellow-button shadow px-5 py-3 mb-5"%>
          <br>
        <%= link_to "Back", jungles_path(@jungle), class: "btn btn-sm back-button shadow px-5 py-3 mb-5"%>
