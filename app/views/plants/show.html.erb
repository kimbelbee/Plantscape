<div class="container-fluid">
  <div class="container">

  <!-- the next is a ROW DIV for the PLANT IMAGE as Banner -->
    <div class="row mt-4">
      <div class="col">
        <!-- here I want an image -->
        <div class="banner-plant-show-small rounded-lg mt-2" style="background-image: url('<%= cl_image_path @plant.photo.key %>')">
          <!-- <%#= cl_image_tag @plant.photo.key, :transformation=>{:width=>1200, :height=>500, :crop=>"fill"} %> -->
          <%#= cl_image_tag @plant.photo.key %>
          <!-- here I want a black H1 title with a square white background -->
          <h1 class="text-center banner-plant-text rounded-lg"><%= @plant.name %></h1>
        </div>

        <!-- here we are going to have an H2 -->
        <div>
          <!-- <h2 class="text-center rounded-lg mt-4">Plant Profile</h2> -->
        </div>
        <!-- <div class="rounded-lg mt-4 mb-4"> -->
        <div class="row rounded-2 pt-4 m-2">
          <div class="col background-dark">
            <p class="text-left"><strong>Water:</strong> <%= @plant.water %></p>
            <p class="text-left"><strong>Light:</strong> <%= @plant.light %></p>
            <p class="text-left"><strong>Soil:</strong> <%= @plant.soil %></p>
          </div>
          <div class="col background-dark">
            <p class="text-left"><strong>Fertilizer:</strong> <%= @plant.fertilizer %></p>
            <p class="text-left"><strong>Repotting:</strong> <%= @plant.repotting %></p>
          </div>
        </div>
        <!-- </div> -->
      </div>
    </div>
    <!-- the next is a ROW DIV for the PLANT ATTRIBUTE as Section-->
    <div class="text-right">
      <%= link_to "Book a Plantsitter", new_booking_path, class: "btn btn-lg small-yellow-button shadow mb-5" %>
    </div>
  </div>
</div>
