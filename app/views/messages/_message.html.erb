

<div class="message-container green-border-left shadow py-md-1 m-md-2 p-sm-3 m-sm-5" id="message-<%= message.id %>">
  <i class="author">
    <span class="font-weight-bold"><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <div class="d-flex mt-1">
    <% if current_user.admin %>
      <% if message.photo.attached? %>
        <div> 
          <%= cl_image_tag(message.photo.key, :width=>200, :crop=>"scale") %>
        </div>
      <% end %>
      <p><%= emojify message.content %></p>
    <% else %>
      <% if message.photo.attached? %>
        <div> 
          <%= cl_image_tag(message.photo.key, :width=>200, :crop=>"scale", class: "rounded border shadow") %>
        </div>
      <% end %>
      <p><%= emojify message.content %></p>
    <% end %>
  </div>
</div>
