<!-- DONT TOUCH ------------------------------------------------------- -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content d-flex justify-content-around">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">How do you like Plantsitter?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex justify-content-center ">
        <%= simple_form_for [@newreview] do |f|%>
          <div class="form-group">
            <%= f.label :title %>
            <br>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :comment %>
            <br>
            <%= f.text_area :comment, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :rating%>
            <br>
            <%= f.range_field :rating, in: 1..5 %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn gray-button " data-dismiss="modal">Close</button>
       <%= f.submit class:"btn small-yellow-button shadow"%>
      <!--  <iframe src="https://giphy.com/embed/txCo7WXCwZpmM" width="480" height="343" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/days-plant-growth-txCo7WXCwZpmM">via GIPHY</a></p> -->
      </div>
      <% end %>
    </div>
  </div>
</div>
