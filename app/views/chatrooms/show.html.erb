<div class="container mt-2 mb-5 col-10">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1 class="text-left">PLANTSCAPE || Chat</h1>
      <div class="position-line">
        <%= render "shared/underline" %>
      </div>
    </div>
  </div>


  <div>
    <div class="scrollchat m-2 overflow-auto" id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% counter = 0 %>
      <% @chatroom.messages.each do |message| %>
        <% break if counter > 9 %>
          <%= render "messages/message", message: message %>
          <% counter += 1 %>
      <% end %>
    </div>
  </div>


  <div>
    <p class="text-left font-weight-bold p-2">Write Your Message</p>
        <!-- <div class="chatroom"> -->
    <%= simple_form_for [ @chatroom, @message ] do |f| %>
      <div class="d-flex justify-content-around align-items-center">
        <div class="col-8 p-2 flex-grow-1">
          <%= f.input :content, label: false, placeholder: "Start writing...", input_html: {rows: "5"} %>
        </div>
        <div class="col-4 p-2">
          <%= f.input :photo, as: :file, label: false, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
